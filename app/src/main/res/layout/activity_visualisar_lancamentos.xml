<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/theme_tela"
    android:orientation="vertical"
    tools:context=".TelaMenu" >

    <View
        android:id="@+id/vSeparadorVisLan0"
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_weight="0.09" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTxSaldo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tvTxSaldo"
                android:textColor="#000044"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvVlSaldo"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tvVlSaldo"
                android:textColor="#000044"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.40"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTxDespesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tvTxDespesa"
                android:textColor="#ff0000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvVlDespesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tvVlDespesa"
                android:textColor="#ff0000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTxReceita"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tvTxReceita"
                android:textColor="#004C00"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvVlReceita"
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tvVlReceita"
                android:textColor="#004C00"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <View      android:id="@+id/Divisor1"
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#C0C0C0" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_weight="0.11"
        android:orientation="vertical"
        android:weightSum="5" >

        <TextView
            android:id="@+id/tvTituloTipoLancamento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="22.50"
            android:gravity="center|center"
            android:text="Titulo"
            android:textColor="#001e95"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.64"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lvLancamentos"
            android:layout_width="wrap_content"
            android:layout_height="254dp"
            android:layout_weight="0.82" >
        </ListView>

    </LinearLayout>

</LinearLayout>